@{
    ViewData["Title"] = "Admin Panel";
}

<h1 class="mb-4">
    <i class="fas fa-tachometer-alt"></i> Admin Dashboard
</h1>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-box"></i> Toplam Ürün
                </h5>
                <h2>@ViewBag.ProductCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-users"></i> Toplam Kullanıcı
                </h5>
                <h2>@ViewBag.UserCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-shopping-bag"></i> Toplam Sipariş
                </h5>
                <h2>@ViewBag.OrderCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="fas fa-money-bill-wave"></i> Toplam Gelir
                </h5>
                <h2>@ViewBag.TotalRevenue.ToString("C2")</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-box"></i> Ürün Yönetimi
            </div>
            <div class="card-body">
                <p>Ürünleri görüntüleyin, ekleyin, düzenleyin veya silin.</p>
                <a asp-action="Products" class="btn btn-primary">
                    <i class="fas fa-arrow-right"></i> Ürünlere Git
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-users"></i> Kullanıcı Yönetimi
            </div>
            <div class="card-body">
                <p>Kullanıcıları görüntüleyin, ekleyin, düzenleyin veya silin.</p>
                <a asp-action="Users" class="btn btn-success">
                    <i class="fas fa-arrow-right"></i> Kullanıcılara Git
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-shopping-cart"></i> Sipariş Yönetimi
            </div>
            <div class="card-body">
                <p>Siparişleri görüntüleyin, durumlarını güncelleyin veya silin.</p>
                <a asp-action="Orders" class="btn btn-info">
                    <i class="fas fa-arrow-right"></i> Siparişlere Git
                </a>
            </div>
        </div>
    </div>
</div>