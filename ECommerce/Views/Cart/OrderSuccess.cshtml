@{
    ViewData["Title"] = "Sipariş Başarılı";
}

<div class="text-center py-5">
    <div class="mb-4">
        <i class="fas fa-check-circle text-success" style="font-size: 100px;"></i>
    </div>

    <h1 class="display-4 text-success mb-3">Siparişiniz Başarıyla Tamamlandı!</h1>

    <p class="lead mb-4">Sipariş numaranız: <strong>#@ViewBag.OrderId</strong></p>

    <div class="alert alert-info d-inline-block">
        <i class="fas fa-info-circle"></i> Sipariş detayları e-posta adresinize gönderilmiştir.
    </div>

    <div class="card mx-auto mt-5" style="max-width: 600px;">
        <div class="card-body">
            <h5 class="card-title"><i class="fas fa-truck"></i> Teslimat Bilgileri</h5>
            <p class="card-text">
                Siparişiniz 1-3 iş günü içerisinde kargoya verilecektir.<br>
                Kargo takip numaranız e-posta ile bildirilecektir.
            </p>
        </div>
    </div>

    <div class="mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
            <i class="fas fa-home"></i> Ana Sayfaya Dön
        </a>
        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-success btn-lg">
            <i class="fas fa-shopping-cart"></i> Alışverişe Devam Et
        </a>
    </div>

    <div class="mt-5 text-muted">
        <small>
            <i class="fas fa-headset"></i> Sorularınız için: destek@ecommerce.com | 0551 628 40 52
        </small>
    </div>
</div>