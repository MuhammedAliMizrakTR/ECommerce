@model ECommerce.Models.Cart
@{
    ViewData["Title"] = "Sepetim";
}

<h1 class="mb-4">
    <i class="fas fa-shopping-cart"></i> Sepetim
</h1>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> Sepetiniz boş.
        <a asp-controller="Home" asp-action="Index" class="alert-link">Alışverişe başlayın!</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    @foreach (var item in Model.Items)
                    {
                        <div class="row border-bottom pb-3 mb-3">
                            <div class="col-md-2">
                                <img src="@item.ImageUrl" class="img-fluid rounded" alt="@item.ProductName">
                            </div>
                            <div class="col-md-4">
                                <h5>@item.ProductName</h5>
                                <p class="text-success mb-0">@item.Price.ToString("C2")</p>
                            </div>
                            <div class="col-md-3">
                                <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center gap-2">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <label class="me-2">Adet:</label>
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" max="99" class="form-control" style="width: 80px;" onchange="this.form.submit()" />
                                </form>
                            </div>
                            <div class="col-md-3 text-end">
                                <h5 class="text-success">@item.TotalPrice.ToString("C2")</h5>
                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Bu ürünü sepetten çıkarmak istediğinizden emin misiniz?')">
                                        <i class="fas fa-trash"></i> Kaldır
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Sipariş Özeti</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Toplam Ürün:</span>
                        <strong>@Model.TotalItems adet</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Ara Toplam:</span>
                        <strong>@Model.TotalPrice.ToString("C2")</strong>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <h5>Toplam:</h5>
                        <h5 class="text-success">@Model.TotalPrice.ToString("C2")</h5>
                    </div>
                    <a asp-action="Checkout" class="btn btn-success w-100 btn-lg">
                        <i class="fas fa-credit-card"></i> Ödemeye Geç
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">
                        <i class="fas fa-arrow-left"></i> Alışverişe Devam
                    </a>
                </div>
            </div>
        </div>
    </div>
}