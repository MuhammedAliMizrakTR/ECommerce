@model List<ECommerce.Models.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
    var adminCount = Model.Count(u => u.Role == ECommerce.Models.UserRole.Admin);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users"></i> Kullanıcı Yönetimi</h1>
    <a asp-action="CreateUser" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Yeni Kullanıcı/Admin Ekle
    </a>
</div>

@if (adminCount <= 1)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i> <strong>Uyarı:</strong> Sistemde sadece 1 admin kullanıcı bulunmaktadır. Son admin kullanıcıyı silemezsiniz.
    </div>
}

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Kullanıcı Adı</th>
                        <th>Ad Soyad</th>
                        <th>E-posta</th>
                        <th>Rol</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        var isLastAdmin = user.Role == ECommerce.Models.UserRole.Admin && adminCount <= 1;
                        var isCurrentUser = Context.Session.GetInt32("UserId") == user.Id;

                        <tr>
                            <td>@user.Id</td>
                            <td>
                                @user.Username
                                @if (isCurrentUser)
                                {
                                    <span class="badge bg-info">Siz</span>
                                }
                            </td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == ECommerce.Models.UserRole.Admin)
                                {
                                    <span class="badge bg-danger">Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary">User</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-primary">
                                    <i class="fas fa-edit"></i>
                                </a>
                                @if (!isLastAdmin && !isCurrentUser)
                                {
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                }
                                else if (isLastAdmin)
                                {
                                    <button class="btn btn-sm btn-secondary" disabled title="Son admin kullanıcı silinemez">
                                        <i class="fas fa-lock"></i>
                                    </button>
                                }
                                else if (isCurrentUser)
                                {
                                    <button class="btn btn-sm btn-secondary" disabled title="Kendi hesabınızı silemezsiniz">
                                        <i class="fas fa-ban"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>