@{
    ViewData["Title"] = "Yeni Ürün Ekle";
}

<h1 class="mb-4">
    <i class="fas fa-plus-circle"></i> Yeni Ürün Ekle
</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post" asp-action="CreateProduct" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" name="Name" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="Description" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fiyat (₺)</label>
                            <input type="number" name="Price" class="form-control" step="0.01" min="0" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Stok</label>
                            <input type="number" name="Stock" class="form-control" min="0" required />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kategori</label>
                        <input type="text" name="Category" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ürün Resmi</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" id="imageInput" />
                        <small class="text-muted">JPG, PNG, GIF formatları desteklenir (Max 5MB)</small>

                        <div class="mt-3">
                            <img id="imagePreview" src="#" alt="Önizleme" class="img-fluid rounded" style="max-height: 300px; display: none;" />
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Kaydet
                        </button>
                        <a asp-action="Products" class="btn btn-secondary">
                            <i class="fas fa-times"></i> İptal
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="alert alert-info">
            <h6><i class="fas fa-info-circle"></i> Bilgi</h6>
            <ul class="mb-0">
                <li>Ürün resmi seçmezseniz varsayılan resim kullanılacaktır</li>
                <li>En iyi görüntü için kare veya yatay resimler kullanın</li>
                <li>Önerilen boyut: 800x600 px</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('imageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}