@model List<ECommerce.Models.Order>
@{
    ViewData["Title"] = "Sipariş Yönetimi";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-shopping-cart"></i> Sipariş Yönetimi</h1>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Sipariş No</th>
                        <th>Müşteri</th>
                        <th>Ürün Sayısı</th>
                        <th>Toplam Tutar</th>
                        <th>Durum</th>
                        <th>Tarih</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center">Henüz sipariş bulunmamaktadır.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td><strong>#@order.Id</strong></td>
                                <td>@ViewData[$"User_{order.UserId}"]</td>
                                <td>@order.Items.Sum(i => i.Quantity) adet</td>
                                <td><strong>@order.TotalAmount.ToString("C2")</strong></td>
                                <td>
                                    @if (order.Status == "Completed")
                                    {
                                        <span class="badge bg-success">Tamamlandı</span>
                                    }
                                    else if (order.Status == "Processing")
                                    {
                                        <span class="badge bg-warning">İşlemde</span>
                                    }
                                    else if (order.Status == "Shipped")
                                    {
                                        <span class="badge bg-info">Kargoda</span>
                                    }
                                    else if (order.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">İptal Edildi</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@order.Status</span>
                                    }
                                </td>
                                <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Detay
                                    </a>
                                    <form asp-action="DeleteOrder" asp-route-id="@order.Id" method="post" class="d-inline" onsubmit="return confirm('Bu siparişi silmek istediğinizden emin misiniz?');">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>